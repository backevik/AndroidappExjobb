<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorptj"
    android:id="@+id/relativeConnectLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="examensarbete.diacert_android.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:text="Välkommen till ditt ångest- och depressionstest!"/>

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:layout_below="@id/welcomeText"
            android:text="Det finns totalt 14 frågor att svara på. För att börja testet klicka på knappen börja. För att läsa om hur du går till väga kan du klicka på info"/>

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/adInfoButton"
            android:textSize="16dp"
            android:textColor="@color/FadedBlackTextColor"
            android:background="@color/FadedBlueButtonColor"
            android:text="Info"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/infoText"
            android:layout_marginTop="30dp"/>

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/adStartButton"
            android:textSize="16dp"
            android:textColor="@color/FadedBlackTextColor"
            android:background="@color/FadedBlueButtonColor"
            android:text="Börja"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/adInfoButton"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</RelativeLayout>